<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    app:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TitleTextView"
                android:text="当前天气"/>

            <TextView
                android:id="@+id/now_cond"
                style="@style/SecondTitleTextView"/>

        </LinearLayout>

        <TextView
            android:id="@+id/now_tmp"
            style="@style/DetailTextView"/>

        <TextView
            android:id="@+id/now_fl"
            style="@style/DetailTextView"/>

        <TextView
            android:id="@+id/now_hum"
            style="@style/DetailTextView"/>

        <TextView
            android:id="@+id/now_pcpn"
            style="@style/DetailTextView"/>

        <TextView
            android:id="@+id/now_vis"
            style="@style/DetailTextView"/>

        <TextView
            android:id="@+id/now_pres"
            style="@style/DetailTextView"/>

        <TextView
            android:id="@+id/now_wind_dir"
            style="@style/DetailTextView"/>

        <TextView
            android:id="@+id/now_wind_sc"
            style="@style/DetailTextView"/>

        <TextView
            android:id="@+id/now_wind_spd"
            style="@style/DetailTextView"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
